<% provide(:title, @user.email) %>

<h1><%= gravatar_for @user %>
    <%= @user.email %>
  </h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>


<p>
  <b>My Links:</b><br />
  <% @user.links.each do |link| %>
<tr>
  <td><%= link_to link.url, link.url  %></td>&nbsp;&nbsp;
  <%= link_to 'Edit', edit_link_path(link) %><br />

</tr>

  <% end %>
</p>

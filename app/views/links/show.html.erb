<p id="notice"><%= notice %></p>

<p>
  <b>Link:</b>
  <%= link_to "#{@link.url}", @link.url %>
</p>


<%= link_to 'Back', links_path %>
<% if @link.user == current_user && (Time.now - @link.created_at)/60 < 15 %>
  <%= link_to "Edit", edit_link_path(@link) %>
  <% end %>

<%= form_for @comment, :url => {:controller => "comments", :action => "create"} do |f| %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>

  <div="field">
    <% @comment.link_id = @link.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br>

<h2>Comments</h2>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td><br><br>

  </tr>
<% end %>